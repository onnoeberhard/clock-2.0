<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="theme" parent="android:Theme.NoTitleBar">
         <item name="circularProgressBarStyle">@style/circleTimer</item>
    </style>
    <style name="themeLight" parent="android:Theme.Light.NoTitleBar">
         <item name="circularProgressBarStyle">@style/circleTimerLight</item>
    </style>
    <style name="circleTimer">
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">@android:color/background_light</item>
    </style>
    <style name="circleTimerLight">
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">@android:color/darker_gray</item>
    </style>
</resources>